/*  To jest całkiem początkowy szablon naszej gry. Coś jak Hello World.   */

#include <SFML/System.hpp>
#include <SFML/Graphics.hpp>
#include <iostream>

const int windowWidth = 1280;
const int windowHeight = 720;

int main()
{
    char a;
    sf::RenderWindow window(sf::VideoMode(windowWidth,windowHeight), "Dupa dupa!!!");
    while(window.isOpen()){
        sf::Event event;
        while(window.pollEvent(event)){
            if(event.type == sf::Event::Closed)
                window.close();
        }
        window.clear();
        window.display();
    }
    return 0;
}
